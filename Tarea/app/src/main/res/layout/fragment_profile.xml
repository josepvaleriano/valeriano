<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/frag_prifle_imgProfile"
        android:src="@drawable/ic_action_settings_voice"
        android:layout_gravity="center_horizontal"
        android:layout_width="56dp"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/frag_prifle_txtUserFragment"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frag_prifle_txtvUserCreation"
            android:gravity="left"
            android:layout_margin="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_prifle_txtvUserCreation"
            android:id="@+id/frag_prifle_txtRememberId"
            android:gravity="left"
            android:layout_margin="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_prifle_txtRememberId"
            android:id="@+id/frag_prifle_txtLastConection"
            android:gravity="left"
            android:layout_margin="16dp"
            />



    </RelativeLayout>



</LinearLayout>

